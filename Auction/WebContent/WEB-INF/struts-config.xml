<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts-config PUBLIC "-//Apache Software Foundation//DTD Struts 
Configuration 1.3//EN" "http://struts.apache.org/dtds/struts-config_1_3.dtd">

<struts-config>

	<form-beans>
		<form-bean name="loginForm" type="form.LoginForm" />
		<form-bean name="auctionInforForm" type="form.AuctionInforForm" />
	</form-beans>
	
	<action-mappings>
		
		<action 
			input="/login.jsp" 
			name="loginForm" 
			path="/login"
			scope="request" 
			type="home.action.LoginAction"
			>		
			<forward name="auth" path="/home/home.html" />
			<forward name="not-auth" path="/login/login.jsp" />
		</action>
		
		<action 
			input="/login.jsp" 
			name="auctionInforForm" 
			path="/auctionInfor"
			scope="request" 
			type="management.action.AuctionInforAction"
			>		
			<forward name="aucitionInfo" path="/management/auctionInfor.jsp" />
		</action>

	</action-mappings>
	
	<message-resources parameter="action.ApplicationResources" />

</struts-config>